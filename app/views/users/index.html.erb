<div class="container">
  <h1 align="center"> User management </h1>
  <%= link_to 'Message', messages_path ,class:"btn btn-outline-dark" %>
  <%= link_to 'Create User', new_user_path , class:"btn btn-outline-dark" %>
  <p>
  <%= form_tag(users_path, method: :get) do %>
    <%= text_field_tag(:search, params[:search]) %>
    <%= submit_tag "search" %>
  <% end %>
    <p>
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th scope="col">Id</th>
          <th scope="col">Name</th>
          <th scope="col">Email</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
      <% @users.each do |user| %>

        <tbody>
          <tr>
            <th scope="row"><% user.id %></th>
            <td> <%=user.name %></td>
            <td><%= user.email %></td>
            <td><%= link_to 'Edit', edit_user_path(user) %> <%= link_to 'Show', user %> <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        </tbody>
      <% end %>
    </table>
    <%= paginate @users  %>
</div>


