<div class="container">
  <h1 align="center">Message management</h1>
  <%= link_to 'User', users_path ,class:"btn btn-outline-dark" %>
  <%= link_to 'Create Message', new_message_path , class:"btn btn-outline-dark" %>
  <%= form_tag(messages_path, method: :get) do %>
    <p>Sort by</p>
    <%= select_tag(:sort, options_for_select([['Newest', :desc], ["Oldest", :asc]])) %>
    <%= submit_tag "Sort" %>
  <% end %>
  <p>
  <% @messages.each do |message| %>
    <div class="card pd-card">
      <div class="row no-gutters">
        <div class="col-auto">
          <%= image_tag message.image , class:"img-fluid"%>
        </div>
        <div class="col">
          <div class="card-block px-2">
            <h4 class="card-title"><%= message.title %></h4>
            <p class="card-text"><%= message.content %></p>
            <p class="text-muted"><%= message.user.name %> <%= link_to 'Show', message %></p>
          </div>
        </div>
      </div>
    </div>
  <% end %>
  <%= paginate @messages %>
</div>