<%= form_with(model: @message, local: true) do |form| %>
    <div class="form-group">
     <%= form.label :title %>
      <%= form.text_field :title, placeholder:"Title", class:"form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :content %>
      <%= form.text_area :content, :cols => 50, :rows => 10, placeholder:"Message",class:"form-control form-big" %>
    </div>

    <div class="form-group">
      <%= form.label :image %>
      <%= form.text_field :image, placeholder:"img URL", class:"form-control" %>
    </div>

    <div class="field">
    <%= form.label :user_id %>
    <p><%= form.collection_select :user_id, User.all, :id, :name %>
    </div>


    <div class="actions">
      <%= form.submit class:"btn btn-primary btn-sm" %>
    </div>
  <% end %>